<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/appbar_layout"
        android:id="@+id/faculty_menu"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:gravity="center_horizontal"
        android:text="Select Branch"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/branch_rbg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/co"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/login_radio"
                android:button="@android:color/transparent"
                android:checked="true"
                android:gravity="center"
                android:padding="10dp"
                android:text="COMPUTER" />

            <RadioButton
                android:id="@+id/it"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/login_radio"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:padding="10dp"
                android:text="INFORMATION TECHNOLOGY" />

            <RadioButton
                android:id="@+id/mech"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/login_radio"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:padding="10dp"
                android:text="MECHANICAL" />

            <RadioButton
                android:id="@+id/auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/login_radio"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:padding="10dp"
                android:text="AUTOMOBILE" />

            <RadioButton
                android:id="@+id/civil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/login_radio"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:padding="10dp"
                android:text="CIVIL" />

            <RadioButton
                android:id="@+id/chem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/login_radio"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:padding="10dp"
                android:text="CHEMICAL" />

        </RadioGroup>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Select Semester"
        android:textColor="#000000" />

    <RadioGroup
        android:id="@+id/semester_rbg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/sem1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/login_radio"
            android:button="@android:color/transparent"
            android:checked="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="1" />

        <RadioButton
            android:id="@+id/sem2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/login_radio"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:padding="10dp"
            android:text="2" />

        <RadioButton
            android:id="@+id/sem3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/login_radio"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:padding="10dp"
            android:text="3" />

        <RadioButton
            android:id="@+id/sem4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/login_radio"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:padding="10dp"
            android:text="4" />

        <RadioButton
            android:id="@+id/sem5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/login_radio"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:padding="10dp"
            android:text="5" />

        <RadioButton
            android:id="@+id/sem6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/login_radio"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:padding="10dp"
            android:text="6" />

        <RadioButton
            android:id="@+id/sem7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/login_radio"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:padding="10dp"
            android:text="7" />

        <RadioButton
            android:id="@+id/sem8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/login_radio"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:padding="10dp"
            android:text="8" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ff3308"
            android:textColor="#ffffff"
            android:text="SEND"
            android:id="@+id/send_button"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"/>

    </LinearLayout>

</LinearLayout>